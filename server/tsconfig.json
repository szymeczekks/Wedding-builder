{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                  
    "rootDir": "src",                      
    "outDir": "dist",                      
    "strict": true,                        
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                  
    "moduleResolution": "node",            
    "resolveJsonModule": true,             
    "allowSyntheticDefaultImports": true,  
    "sourceMap": true,
    "types": ["node", "jest"]                  
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
